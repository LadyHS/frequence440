<section id="resources">
  <header class="header-intro main-section">
    <h1 class="page-title">{{{__ "resources.subtitle"}}}</h1>
    <p class="catchphrase">{{{__ "resources.mainTitle"}}}</p>
    <p class="sub-catchphrase">{{{__ "resources.description"}}}</p>
    <a href="#resources-spheres" class="icon-container">
      <i class="fa fa-chevron-down" aria-hidden="true"></i>
    </a>
  </header>
  <section id="resources-spheres" class="call-to-action flex wrap main-section">
    <div>
      <h2 class="hero-title">{{{__ "resources.spheres.title"}}}</h2>
      <p class="hero-subtitle">{{{__ "resources.spheres.subtitle"}}}</p>
      <a id="blackarrow" href="#resources-callToAction" class="icon-container">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </a>
    </div>
    <div class="graph-container" id="graph">
      <img src="/images/{{{__ "resources.spheres.graph"}}}.svg" alt="graph representing action plans">
    </div>
  </section>
  <section id="resources-callToAction" class="call-to-action flex wrap main-section">
    <div class = "call-to-action-black">
      <h2 class="hero-title">{{{__ "resources.callToAction.manifeste.title"}}}</h2>
      <p class="hero-subtitle">{{{__ "resources.callToAction.manifeste.catchphrase"}}}</p>
      <a href="https://ladyhsociety.com" target= "_blank" class="button white-button">{{{__ "resources.callToAction.manifeste.button"}}}</a>
    </div>
    <div>
      <h2 class="hero-title">{{{__ "resources.callToAction.title"}}}</h2>
      <p class="hero-subtitle">{{{__ "resources.callToAction.catchphrase"}}}</p>
      <a href="https://calendly.com/frequence440" class="button black-button"
        target="_blank">{{{__ "resources.callToAction.button"}}}</a>
    </div>
  </section>
  <section class="call-to-action flex wrap main-section">
    <div>
      <h2 class="hero-title">{{{__ "workshops.title"}}}</h2>
      <p class="hero-subtitle">{{{__ "workshops.subtitle"}}}</p>
    </div>
    <div>
      <div class="options">
        <ul class="square">
          <li>
            {{{__ "workshops.list.1"}}}
            <a href={{{__ "workshops.link.1"}}} target= "_blank" class="button white-button" style="margin-top:10px; margin-bottom:30px;">EarSketch</a>
          </li>
          <li>
            {{{__ "workshops.list.2"}}}
            <a href={{{__ "workshops.link.2"}}} target= "_blank" class="button white-button" style="margin-top:10px; margin-bottom:30px;">BE YOU</a>
          </li>
          <li>
            {{{__ "workshops.list.3"}}}
            <a href="https://ladyhsociety.com" target= "_blank" class="button white-button" style="margin-top:10px; margin-bottom:30px;">Lady H Society</a>
            </li>
        </ul>
      </div>
    </div>
  </section>
  
</section>